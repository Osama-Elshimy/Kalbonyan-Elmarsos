extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")

block content
  main 
    if hasOrders
      ul.cart__item-list 
        each order in orders
          li.cart__item 
            h1 #{order.id}
            ul.cart__item-list
              each product in order.products
                li.cart__item #{product.title} (#{product.orderItem.quantity})

    else 
      h1.fallback-h1 No Orders!