extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/orders.css")

block content
  main 
    if hasOrders
      ul.orders
        each order in orders
          li.orders__item
            h1 Order - # #{order._id}
            ul.orders__products
              each product in order.products
                li.orders__products-item #{product.product.title} (#{product.quantity})

    else 
      h1.fallback-h1 No Orders!